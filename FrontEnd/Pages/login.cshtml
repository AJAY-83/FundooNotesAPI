@page
@model LoginModel
@{
    ViewData["login"] = "Login";
}

    <h2>@ViewData["login"]</h2>
    <h3>@Model.Message</h3>
    <body>

        <form>

            <input type="text" name="fullname" placeholder="Enter the Full Name"><br><br>
            <input type="text" name="email" placeholder="Enter the Email"><br><br>
            <input type="text" name="mobile" placeholder="Enter the Mobile Number"><br><br>

            <input type="submit" value="Register"> <br>
        </form>
        <br>
        <input type="submit" value="Login With Facebook" name="facebooklogin" oncli>

        <input type="submit" value="Login With Google" name="googlelogin">
</body>
<style>
    body {
        background-image: url('bgimage.jpg');
    }

    input[type="submit"] {
        color: dodgerblue;
        font-size: 20px;
        padding: 5px;
    }

        input[type="submit"]:hover {
            border: 2px dashed;
            border-radius: 5px;
        }
</style>